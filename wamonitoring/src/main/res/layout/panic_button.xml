<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PANIC BUTTON \nuse this button carefully, it will broadcast to all users"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:id="@+id/label"/>

    <ng.max.slideview.SlideView
        android:id="@+id/slideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:buttonBackgroundColor="@color/amber"
        app:buttonImage="@android:drawable/ic_dialog_alert"
        app:slideBackgroundColor="@color/light_blue"
        app:slideText="Slide me for Panic"
        app:slideTextColor="@color/white"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/label"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 sec"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="25dp"
        android:id="@+id/count"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/slideView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/cancelBut"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Cancel"
        android:drawableLeft="@android:drawable/ic_delete"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/count"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>